{
  "manifest_version": 3,
  "name": "Bing Deep Hunter (Top 200)",
  "version": "2.0",
  "description": "Deep discovery for Bing results with Target Matching and URL-based jumping",
  "permissions": ["activeTab", "sidePanel", "storage", "tabs"],
  "host_permissions": ["https://www.bing.com/*"],
  "action": {
    "default_title": "Open Deep Hunter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bing.com/*"],
      "js": ["content.js"]
    }
  ]
}
